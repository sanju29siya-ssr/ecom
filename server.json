import express from "express";
import cors from "cors";

const app = express();
app.use(cors());
app.use(express.json());

// Fake in-memory data (this disappears if you restart the server)
let products = [
  { id: 1, name: "Classic T-shirt", price: 499, image: "https://via.placeholder.com/200" },
  { id: 2, name: "Running Sneakers", price: 1999, image: "https://via.placeholder.com/200" },
  { id: 3, name: "Smart Watch", price: 2499, image: "https://via.placeholder.com/200" }
];

let cart = [];
let orders = [];

// Get all products
app.get("/products", (req, res) => {
  res.json(products);
});

// Add to cart
app.post("/cart", (req, res) => {
  const { productId, quantity } = req.body;
  const product = products.find((p) => p.id === productId);
  if (product) {
    cart.push({ ...product, quantity });
    res.json({ message: "Added to cart", cart });
  } else {
    res.status(404).json({ message: "Product not found" });
  }
});

// Get cart
app.get("/cart", (req, res) => {
  res.json(cart);
});

// Place order
app.post("/order", (req, res) => {
  const { name, address, payment } = req.body;
  if (!name || !address || !payment)
    return res.status(400).json({ message: "Missing details" });

  orders.push({ name, address, payment, items: cart });
  cart = []; // clear cart after order
  res.json({ message: "Order placed successfully!" });
});

// Check orders
app.get("/orders", (req, res) => {
  res.json(orders);
});

app.listen(10000, () => {
  console.log("ğŸš€ Server running on port 10000");
});